<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:transitionGroup="true">

    <!-- Parent container for Toolbar -->
    <FrameLayout
            android:id="@+id/rvx_morphed_toolbar_parent"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="0dp">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
                android:id="@+id/rvx_morphed_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@android:color/white"
                app:navigationIcon="@drawable/rvx_morphed_settings_toolbar_arrow_left"
                app:title="@string/rvx_morphed_settings_title" />

    </FrameLayout>

    <!-- Container for WebView -->
    <WebView
            android:id="@+id/rvx_morphed_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>
